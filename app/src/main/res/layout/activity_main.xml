<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGris"
        tools:context=".MainActivity"
        android:id="@+id/layoutid"
        android:visibility="visible"
>

    <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Me"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="160dp"
            android:visibility="visible"
    >

    </Button>
    <Button
            android:id="@+id/stopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Ejecution"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="140dp"
    >

    </Button>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Inicie Ejecucion!"
            android:textColor="@color/colorBlanco"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"
            android:layout_marginLeft="136dp"
            android:textSize="20dp"
    />
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorRojo"
            tools:context=".MainActivity"
            android:visibility="gone"
            android:id="@+id/loadingContainer">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Freneee!"
            android:textColor="@color/colorBlanco"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"
            android:layout_marginLeft="136dp"
            android:textSize="40dp"
    />

        <Button
                android:id="@+id/sendButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click Me Amarillo"
                android:layout_marginTop="330dp"
                android:layout_marginLeft="130dp"
                android:visibility="gone"
        >

        </Button>

    </RelativeLayout>

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAmarillo"
            tools:context=".MainActivity"
            android:visibility="gone"
            android:id="@+id/loadingContainer1">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Cuidadoo!"
            android:textColor="@color/colorBlanco"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"
            android:layout_marginLeft="136dp"
            android:textSize="40dp"
    />

        <Button
                android:id="@+id/sendButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click Me Verde"
                android:layout_marginTop="330dp"
                android:layout_gravity="center"
                android:layout_marginLeft="130dp"
                android:visibility="visible">

        </Button>

    </RelativeLayout>

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorVerde"
            tools:context=".MainActivity"
            android:visibility="gone"
            android:id="@+id/loadingContainer2">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Siga Adelante!"
            android:textColor="@color/colorBlanco"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"
            android:layout_marginLeft="136dp"
            android:textSize="40dp"
    />


    </RelativeLayout>

</RelativeLayout>

